<!DOCTYPE html>
<html>
  <head>
    <title>Quarterly Offense Age Demographics</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, user-scalable=no"
    />
    <link rel="stylesheet" href="assets/css/main.css" />
    <noscript>
      <link rel="stylesheet" href="assets/css/noscript.css" />
    </noscript>
    <style>
      .sections-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .sections-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 5rem;
      }

      .sections-container section {
        flex: 1;
      }

      .button-container {
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 1rem;
        width: auto;
        height: 80px;
      }
    </style>
  </head>

  <body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">
      <!-- Header -->
      <header id="header">
        <div class="inner">
          <!-- Logo -->
          <a href="/" class="logo">
            <span class="symbol"><img src="images/logo.svg" alt="" /></span
            ><span class="title">Crime Trends Tracker</span>
          </a>

          <!-- Nav -->
          <nav>
            <ul>
              <li><a href="#menu">Menu</a></li>
            </ul>
          </nav>
        </div>
      </header>

      <!-- Menu -->
      <nav id="menu">
        <h2>Menu</h2>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/CrimeTrendPercentages">Statewise Crime Dynamics</a></li>
          <li><a href="/TrendAnalysis">Diurnal Crime Trends</a></li>
          <li><a href="/SectorAnalysis">Population Segment Crime Study</a></li>
          <li><a href="/Correlation">Crime Seasonality Insights</a></li>
          <li><a href="/Statistics">Quarterly Offense Age Demographics</a></li>
        </ul>
      </nav>

      <!-- Main -->
      <div id="main">
        <div class="inner">
          <h1>Quarterly Offense Age Demographics</h1>
          <span class="image main"
            ><img src="../images/pic13.jpg" alt=""
          /></span>
          <form method="post" action="/Statistics" style="overflow: hidden">
            <div class="sections-wrapper">
              <div class="sections-container">
                <!-- Section 1 -->
                <section>
                  <h2>Parameter 1</h2>
                  <div class="form-group">
                    <input
                      type="radio"
                      id="option1"
                      name="OffenderAge"
                      value="OffenderAge"
                    />
                    <label for="option1">Offender's Age</label>
                  </div>
                  <div class="form-group">
                    <input
                      type="radio"
                      id="option2"
                      name="VictimAge"
                      value="VictimAge"
                    />
                    <label for="option2">Victim's Age</label>
                  </div>
                  <div class="form-group">
                    <input type="radio" id="option3" name="Hour" value="Hour" />
                    <label for="option3">Hour</label>
                  </div>
                </section>

                <!-- Section 2 -->
                <section>
                  <h2>Parameter 2</h2>
                  <div class="form-group">
                    <input
                      type="radio"
                      id="option4"
                      name="Weapon"
                      value="Weapon"
                    />
                    <label for="option4">Weapon</label>
                  </div>
                  <div class="form-group">
                    <input
                      type="radio"
                      id="option5"
                      name="Sex"
                      value="Offense Type"
                    />
                    <label for="option5">Offense</label>
                  </div>
                  <div class="form-group">
                    <input
                      type="radio"
                      id="option6"
                      name="Race"
                      value="Location Type"
                    />
                    <label for="option6">Location</label>
                  </div>
                </section>
              </div>
              <!-- Buttons -->
              <div class="button-container">
                <div class="button-container">
                  <button type="submit" class="btn btn-primary">
                    Fetch Data
                  </button>
                  <button
                    type="button"
                    class="btn btn-secondary"
                    onclick="resetForm()"
                  >
                    Reset
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>

      <% if (min != 0 && avg != 0 && max != 0 && labels != 0 && yAxisParameter
      != 0) { %>
      <div>
        <canvas
          id="myChart"
          style="
            max-height: 650px;
            max-width: 850px;
            margin: auto;
            text-align: center;
            height: 650px;
            width: 850px;
          "
        ></canvas>
      </div>
      <% } %>

      <!-- Footer -->
      <footer id="footer">
        <div class="inner">
          <section>
            <h2>Get in touch</h2>
            <form method="post" action="#">
              <div class="fields">
                <div class="field half">
                  <input type="text" name="name" id="name" placeholder="Name" />
                </div>
                <div class="field half">
                  <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Email"
                  />
                </div>
                <div class="field">
                  <textarea
                    name="message"
                    id="message"
                    placeholder="Message"
                  ></textarea>
                </div>
              </div>
              <ul class="actions">
                <li><input type="submit" value="Send" class="primary" /></li>
              </ul>
            </form>
          </section>
          <section>
            <h2>Follow</h2>
            <ul class="icons">
              <li>
                <a
                  href="https://twitter.com/UF"
                  class="icon brands style2 fa-twitter"
                  ><span class="label">Twitter</span></a
                >
              </li>
              <li>
                <a
                  href="https://www.facebook.com/uflorida"
                  class="icon brands style2 fa-facebook-f"
                  ><span class="label">Facebook</span></a
                >
              </li>
              <li>
                <a
                  href="https://www.instagram.com/uflorida/"
                  class="icon brands style2 fa-instagram"
                  ><span class="label">Instagram</span></a
                >
              </li>
              <!-- <li><a href="#" class="icon brands style2 fa-dribbble"><span class="label">Dribbble</span></a></li> -->
              <!-- <li><a href="#" class="icon brands style2 fa-github"><span class="label">GitHub</span></a></li> -->
              <!-- <li><a href="#" class="icon brands style2 fa-500px"><span class="label">500px</span></a></li> -->
              <!-- <li><a href="#" class="icon solid style2 fa-phone"><span class="label">Phone</span></a></li> -->
              <li>
                <a
                  href="mailto:info@ufonline.ufl.edu"
                  class="icon solid style2 fa-envelope"
                  ><span class="label">Email</span></a
                >
              </li>
            </ul>
          </section>
        </div>
      </footer>
    </div>

    <!-- Scripts -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/browser.min.js"></script>
    <script src="assets/js/breakpoints.min.js"></script>
    <script src="assets/js/util.js"></script>
    <script src="assets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
